{
  "compilerOptions": {
    "lib": ["dom", "es2019"],
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2019",
    "outDir": ".build",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["./**/*.ts", "webpack.config.js"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "./**/*.test.ts"
  ]
}
